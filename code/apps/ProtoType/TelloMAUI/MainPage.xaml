<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TelloMAUI.MainPage">


    <StackLayout Margin="20">
        <Button Text="TakeOff" x:Name="btnTakeOff" Clicked="btnTakeOff_Clicked" Padding="20"/>

        <Button Text="Land" x:Name="btnLand" Clicked="btnLand_Clicked" Padding="20" />

        <Button Text="Up" x:Name="btnUp" Clicked="btnUp_Clicked" Padding="20"  />

        <Button Text="Down" x:Name="btnDown" Clicked="btnDown_Clicked" Padding="20"  />

        <Button Text="Left" x:Name="btnLeft" Clicked="btnLeft_Clicked" Padding="20" />

        <Button Text="Right" x:Name="btnRight" Clicked="btnRight_Clicked" Padding="20" />
    </StackLayout>

</ContentPage>
